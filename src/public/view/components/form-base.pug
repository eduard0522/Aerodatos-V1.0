link(rel="stylesheet", href="../css/form-base.css")

section(id="form" class="general-container-form hidden")

  section.form-container
    div(class="img-form-container hidden-responsive")
      h2.crud-tittle Realizar nuevo registro
      p Recuerda diligenciar todos los datos!!
      img(src="../assets/img/Logo SGDEA Azul.png", alt="Logo SGDA",class="hidden-responsive")
          
    div.form
      form.form-file
        h2 Ingresa los siguientes datos 

        div.input-container
          label N° Expediente
             input(type="text", name="expediente" ,placeholder=" 📑")
          label Referencia
            select(name="referencia" , title="Referencia", class="select-referencia")
              option(value="1") Contratos
              option(value="2") Historias Clinicas
              option(value="3") Aerodromos
              option(value="4") Resoluciones
              option(value="5") HistoriasLaborales
      
        div.input-container
          label N° Serie
            input(type="number" ,name="serie" ,placeholder=" 📑")
          label N° Subserie
            input(type="number" name="subserie",placeholder=" 📑")
              

        div.input-container
          label N° Pasillo
            input(type="number", name="pasillo" placeholder=" 🔠 ")
          label Cuerpo
            input(type="text", name="cuerpo" placeholder=" 🔠 ")
             

        div.input-container
          label Estante
            input(type="number" ,name="estante" placeholder=" 🗃️")
          label Entrepaño
            input(type="number" ,name="entrepanio" placeholder=" 🔢")
              

        div.input-container
          label Caja
            input(type="number" ,name="caja", placeholder=" 📦 Caja")
          label Carpeta
            input(type="text" ,name="carpeta" ,placeholder=" 📁 Numero de carpeta")
             
        label.i100 Dependencia
          select(name="dependencia" id="oficinas")
              option(value="1") Aerodromos 
              option(value="2") Administración general 
              option(value="3") Archivo 
              option(value="4") Tecnología 
              option(value="5") Dirección de estandares de vuelo 
              
        div.input-container
           button(type="button" ,class="button-cancel-form") Cancelar 
           button(type="submit" ,class="resgister-form buttonReg") Registrar 
             
        input(type="hidden", name="idHidden")
            